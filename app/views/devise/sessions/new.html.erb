<div class="container">
    <div class="jumbotron">
    <h2>Willkommen bei xConnect</h2>
    <br>
      <%= image_tag("marketplace.png", :size => "200x200") %>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <ntext>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class:"form-control"%>
      </div>
      <div class="form-group">
        <%= f.label "Passwort" %>
        <%= f.password_field :password, autocomplete: "off", class:"form-control"%>
      </div>
      <div class="form-group">
        <input type="checkbox" name="my-checkbox" checked>
        <%= f.hidden_field :remember_me, class:"form-control hidden"  %>
        <%= f.label :remember_me %>
      </div>
      </ntext>
      <div class="actions">
            <%= f.submit "Anmelden", class:"btn btn-primary btn-lg" %>
      </div>
    <% end %>
    <% render "devise/shared/links" %>
  </div>
</div>

<script>
    $.fn.bootstrapSwitch.defaults.onColor = 'success';
    $("[name='my-checkbox']").bootstrapSwitch('state',true);
    $("[name='my-checkbox']").on('switchChange.bootstrapSwitch', function () {
    $("#remember_me").prop('checked',$("[name='my-checkbox']").bootstrapSwitch('state'));
    });
</script>