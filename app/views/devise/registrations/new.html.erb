<div class="container">
  <div class="jumbotron">
    <h2>Willkommen bei xConnect</h2>
    <br>
      <%= image_tag("marketplace.png", :size => "200x200") %>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <ntext>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class:"form-control"%>
      </div>
      <div class="form-group">
        <%= f.label "Passwort" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", class:"form-control"%>
      </div>
      <div class="form-group">
        <%= f.label "Passwort bestÃ¤tigen" %>
        <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control"%>
      </div>
      <div class="form-group">
        <%= f.label "Nachname" %>
        <%= f.text_field :lastname, class:"form-control"%>
      </div>
      <div class="form-group">
        <%= f.label "Vorname" %>
        <%= f.text_field :name, class:"form-control" %>
      </div>
      <div class="form-group">
         <%= f.label "Adresse" %><br/>
         <%= f.text_field :address1, class:"form-control" %>
         <%= f.text_field :address2, class:"form-control" %>
         <%= f.text_field :address3, class:"form-control" %>
      </div>
     <% @user.active = true %>
     <% @user.status = "ok" %>
     <% @user.anonymous = false %>
     <% @user.superuser = false %>
     <% @user.webmaster = false %>
     <% @user.calendar = false %>
     <% @user.time_from = 9 %>
     <% @user.time_to = 17 %>
     <%= f.hidden_field :geo_address, class:"form-control" %>
     <%= f.hidden_field :longitude, class:"form-control" %>
     <%= f.hidden_field :latitude, class:"form-control" %>
     <%= f.hidden_field :active, class:"form-control" %>
     <%= f.hidden_field :status, class:"form-control" %>
     <%= f.hidden_field :anonymous, class:"form-control" %>
     <%= f.hidden_field :superuser, class:"form-control" %>
     <%= f.hidden_field :webmaster, class:"form-control" %>
     <%= f.hidden_field :calendar,class:"form-control" %>
     <%= f.hidden_field :time_from, class:"form-control" %>
     <%= f.hidden_field :time_to, class:"form-control" %>
      </ntext>
      <div class="actions">
            <%= f.submit "Registrieren", class:"btn btn-primary btn-lg" %>
      </div>
    <% end %>
    <% render "devise/shared/links" %>
  </div>
</div>