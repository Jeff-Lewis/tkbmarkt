<p id="notice"><%= notice %></p>

<h1>Listing Emails</h1>

<table>
  <thead>
    <tr>
      <th>Header</th>
      <th>Body</th>
      <th>M from</th>
      <th>M to</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @emails.each do |email| %>
      <tr>
        <td><%= email.header %></td>
        <td><%= email.body %></td>
        <td><%= email.m_from %></td>
        <td><%= email.m_to %></td>
        <td><%= link_to 'Show', email %></td>
        <td><%= link_to 'Edit', edit_email_path(email) %></td>
        <td><%= link_to 'Destroy', email, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

