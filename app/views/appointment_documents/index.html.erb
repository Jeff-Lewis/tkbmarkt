<p id="notice"><%= notice %></p>

<h1>Listing Appointment Documents</h1>

<table>
  <thead>
    <tr>
      <th>Appointment</th>
      <th>Name</th>
      <th>Description</th>
      <th>Document file name</th>
      <th>Document content type</th>
      <th>Document file size</th>
      <th>Document updated at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointment_documents.each do |appointment_document| %>
      <tr>
        <td><%= appointment_document.appointment_id %></td>
        <td><%= appointment_document.name %></td>
        <td><%= appointment_document.description %></td>
        <td><%= appointment_document.document_file_name %></td>
        <td><%= appointment_document.document_content_type %></td>
        <td><%= appointment_document.document_file_size %></td>
        <td><%= appointment_document.document_updated_at %></td>
        <td><%= link_to 'Show', appointment_document %></td>
        <td><%= link_to 'Edit', edit_appointment_document_path(appointment_document) %></td>
        <td><%= link_to 'Destroy', appointment_document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

