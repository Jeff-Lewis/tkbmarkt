	<div class="row">
    <div class="col-md-12">
  		<table class="table table-striped">
        <thead>
          <tr>
            <td colspan="3">
              <div class="digg_pagination">
                  <%= will_paginate @usertickets, :container => false, previous_label: "<", next_label: ">" %>
              </div>	  
            </td>
          </tr>
          <tr>
            <th></th>
            <th colspan="2">Name</th>
            <th>Status</th>
          </tr>
        </thead>
        
        <tbody>

            <% @usertickets.each do |ut| %>

              <tr>
    			       <td>
        	         <%= link_to ut, method: :delete, data: { confirm: 'Are you sure?' } do %>
                    <i class="btn btn-danger btn-lg glyphicon glyphicon-trash"></i>
                    <% end %>
                  </td>
                  <td>
                    <% if ut.user.anonymous or ut.user.avatar_file_name == nil %>
                      <%= image_tag("user_a.png", :size => "100x100", class:"img-rounded" ) %>
                    <% else %>
                      <%= image_tag ut.user.avatar(:small), class:"img-rounded"  %>
                    <% end %>
                  </td>
                  <td>
                    <anzeigetext>
                      <%= ut.user.name + " " + ut.user.lastname %>
                    </anzeigetext>
                  </td>
                  <td>
                    <%= ut.status %>
                  </td>
              </tr>
            <% end %>

        </tbody>
      </table>
    </div>
  </div>
