  <div class="row">
    <action>
    <%= action_buttons2("Mcategory", nil, nil) %>
    </action>
  </div>

  <div class="row">
    <header>
    <%= header("Tabelle " + @cat, true) %>
    </header>
  </div>

	<div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
    		<!--<table class="table table-striped table-hover-->
    		<table class="table table-striped">
          <thead>
            <tr>
              <th></th>
              <th>Kategorie</th>
            </tr>
          </thead>
        
          <tbody>
            <% @mcategories.each do |c| %>
              <tr>
                <td>
                  <%= link_to(edit_mcategory_path(:id => c.id)) do %>
                    <i class="btn btn-primary glyphicon glyphicon-wrench"></i>
                  <% end %>
                  <%= link_to c, method: :delete, data: { confirm: 'Are you sure?' } do %>
                    <i class="btn btn-danger glyphicon glyphicon-trash"></i>
                  <% end %>
                </td>
                <td>
                  <%= c.name %>
                </td>
              </tr>
            <% end %>
          </tbody>

        </table>
      </div>
    </div>
  </div>
